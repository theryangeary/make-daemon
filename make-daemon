#!/bin/bash

# TODO print out working configuration file

# Colors

BLACK="0;30"
RED="0;31"
GREEN="0;32"
BROWN="0;33"
BLUE="0;34"
PURPLE="0;35"
CYAN="0;36"
LIGHTGRAY="0;37"

DARKGRAY="1;30"
LIGHTRED="1;31"
LIGHTGREEN="1;32"
YELLOW="1;33"
LIGHTBLUE="1;34"
LIGHTPURPLE="1;35"
LIGHTCYAN="1;36"
WHITE="1;37"

COLOR_PREFIX="\033["
COLOR_POSTFIX="m"

COMMAND_COLOR="$COLOR_PREFIX$LIGHTPURPLE$COLOR_POSTFIX"
NO_COLOR="${COLOR_PREFIX}0${COLOR_POSTFIX}"

COMMAND="make"

# TODO loop on file modification
for RULE in "$@"
do
  echo -e ${COMMAND_COLOR}${COMMAND} ${RULE}${NO_COLOR}:
  $COMMAND $RULE
done
